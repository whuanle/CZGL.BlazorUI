@inherits InputBase
@if (IsDisabled)
{
    <input class="input @_allClass" type="@InputType" placeholder="@Placeholder" @onclick="MouseDownEventArg" @attributes="UIAttributes" disabled />
}
else
{
    if (IsReadonly)
    {
        <input class="input @_allClass" type="@InputType" placeholder="@Placeholder" @onclick="MouseDownEventArg"@attributes="UIAttributes" readonly />
    }
    else
    {
        <input class="input @_allClass" type="@InputType" placeholder="@Placeholder" @onclick="MouseDownEventArg" @attributes="UIAttributes" />
    }
}