                    <UIButton Color="UIEColor.Info">Small</UIButton>
                    <UIButton Color="UIEColor.Info">Small</UIButton>
                </UIButtonGroup>
            </UIColumn>
            <UIColumn>
                <UIButtonGroup Size="UIEButtonSize.Medium">
